{
  "name": "secondary-explorer",
  "displayName": "Secondary Explorer",
  "description": "Adds a secondary explorer view to manage files and folders outside the default workspace explorer.",
  "version": "8.0.0",
  "icon": "images/logo.png",
  "publisher": "Thinker",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/R35007/secondary-explorer-vscode-extension"
  },
  "author": {
    "name": "Sivaraman",
    "email": "sendmsg2siva@gmail.com"
  },
  "keywords": [
    "vscode",
    "explorer",
    "bookmark-explorer",
    "file",
    "folder",
    "notes",
    "side-notes",
    "file-system",
    "file-management",
    "file-explorer",
    "file-browser",
    "file-tree",
    "file-viewer",
    "file-organizer",
    "file-navigator",
    "file-operations",
    "secondary-explorer"
  ],
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Secondary Explorer",
      "properties": {
        "secondaryExplorer.paths": {
          "order": 1,
          "type": "array",
          "description": "List of groups to show in Secondary Explorer. Each item can be a string path or an object with baseFolder, pattern(s), ignorepattern(s), and title.",
          "items": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "basePath": {
                    "type": "string",
                    "markdownDescription": "Base folder path. Supports ${workspaceFolder} and ${userHome}. If omitted, uses current workspace folder."
                  },
                  "include": {
                    "oneOf": [
                      {
                        "type": "string",
                        "default": "*"
                      },
                      {
                        "type": "array",
                        "default": [
                          "*"
                        ],
                        "items": {
                          "type": "string"
                        }
                      }
                    ],
                    "markdownDescription": "Glob pattern(s) to include. Examples: *.md. Defaults to *"
                  },
                  "exclude": {
                    "oneOf": [
                      {
                        "type": "string",
                        "default": "node_modules"
                      },
                      {
                        "type": "array",
                        "default": [
                          "node_modules",
                          "dist",
                          "build",
                          "out"
                        ],
                        "items": {
                          "type": "string"
                        }
                      }
                    ],
                    "markdownDescription": "Glob pattern(s) to ignore or exclude. Defaults to node_modules, dist, build, out"
                  },
                  "name": {
                    "type": "string",
                    "description": "Optional name for this group. Defaults to folder name."
                  }
                },
                "examples": [
                  "${workspaceFolder}",
                  {
                    "basePath": "${workspaceFolder}",
                    "name": "All Workspace Files",
                    "include": [
                      "**/*"
                    ],
                    "exclude": [
                      "node_modules",
                      "dist",
                      "build",
                      "out",
                      ".vscode-test"
                    ]
                  },
                  {
                    "basePath": "${workspaceFolder}",
                    "name": "Workspace Docs",
                    "include": [
                      "**/*.{md,markdown,txt,rtf,adoc,asciidoc,restructuredtext,org,html,htm,pdf,docx,odt}"
                    ],
                    "exclude": [
                      "node_modules",
                      "dist",
                      "build",
                      "out",
                      ".vscode-test"
                    ]
                  },
                  {
                    "basePath": "${workspaceFolder}",
                    "name": "Workspace Images",
                    "include": [
                      "**/*.{png,jpg,jpeg,gif,svg,webp,avif,bmp,tiff,ico,icns,heic,heif}"
                    ],
                    "exclude": [
                      "node_modules",
                      "dist",
                      "build",
                      "out",
                      ".vscode-test"
                    ]
                  }
                ],
                "additionalProperties": false
              }
            ]
          },
          "examples": [
            "${workspaceFolder}",
            {
              "basePath": "${workspaceFolder}",
              "name": "All Workspace Files",
              "include": [
                "**/*"
              ],
              "exclude": [
                "node_modules",
                "dist",
                "build",
                "out",
                ".vscode-test"
              ]
            },
            {
              "basePath": "${workspaceFolder}",
              "name": "Workspace Docs",
              "include": [
                "**/*.{md,markdown,txt,rtf,adoc,asciidoc,restructuredtext,org,html,htm,pdf,docx,odt}"
              ],
              "exclude": [
                "node_modules",
                "dist",
                "build",
                "out",
                ".vscode-test"
              ]
            },
            {
              "basePath": "${workspaceFolder}",
              "name": "Workspace Images",
              "include": [
                "**/*.{png,jpg,jpeg,gif,svg,webp,avif,bmp,tiff,ico,icns,heic,heif}"
              ],
              "exclude": [
                "node_modules",
                "dist",
                "build",
                "out",
                ".vscode-test"
              ]
            }
          ],
          "default": []
        },
        "secondaryExplorer.deleteBehavior": {
          "order": 2,
          "type": "string",
          "enum": [
            "alwaysAsk",
            "recycleBin",
            "permanent"
          ],
          "enumDescriptions": [
            "Always ask before deleting (show confirmation dialog).",
            "Move to recycle bin without asking.",
            "Permanently delete without asking."
          ],
          "default": "recycleBin",
          "description": "Controls how delete operations are handled."
        },
        "secondaryExplorer.rootPathSortOrder": {
          "order": 3,
          "type": "string",
          "enum": [
            "default",
            "filesFirst",
            "foldersFirst",
            "mixed"
          ],
          "enumDescriptions": [
            "Default sorting order (sorted by secondaryExplorer.paths order).",
            "Files are shown before folders, all sorted alphabetically.",
            "Folders are shown before files, all sorted alphabetically.",
            "Mixed sorting order (folders and files mixed based on name, sorted alphabetically)."
          ],
          "default": "default",
          "description": "Controls the sorting order of items in the explorer."
        },
        "secondaryExplorer.itemsSortOrderPattern": {
          "order": 4,
          "type": "array",
          "items": {
            "type": "string"
          },
          "additionalItems": true,
          "default": [
            "*.instructions.md",
            "*.prompt.md",
            "*.agent.md",
            "*.chatmode.md"
          ],
          "description": "Controls the sorting order of items in the explorer."
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "secondaryExplorerView",
          "name": "Secondary Explorer",
          "contextualTitle": "Secondary Explorer",
          "visibility": "visible",
          "icon": "$(folder)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "secondaryExplorerView",
        "contents": "No paths configured.\n[Add Folder to Explorer](command:secondary-explorer.pickPath)",
        "when": "!secondaryExplorer.paths || secondaryExplorer.paths.length == 0"
      }
    ],
    "commands": [
      {
        "command": "secondary-explorer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "secondary-explorer.pickPath",
        "title": "Add File or Folder to Explorer",
        "icon": "$(add)"
      },
      {
        "command": "secondary-explorer.openSettings",
        "title": "Settings",
        "icon": "$(gear)"
      },
      {
        "command": "secondary-explorer.createFile",
        "title": "New File...",
        "icon": "$(new-file)"
      },
      {
        "command": "secondary-explorer.createFolder",
        "title": "New Folder...",
        "icon": "$(new-folder)"
      },
      {
        "command": "secondary-explorer.deleteEntry",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "secondary-explorer.renameEntry",
        "title": "Rename...",
        "icon": "$(edit)"
      },
      {
        "command": "secondary-explorer.openFile",
        "title": "Open File",
        "icon": "$(eye)"
      },
      {
        "command": "secondary-explorer.openToTheSide",
        "title": "Open to the Side",
        "icon": "$(eye)"
      },
      {
        "command": "secondary-explorer.openFolderInNewWindow",
        "title": "Open in New Window",
        "icon": "$(link-external)"
      },
      {
        "command": "secondary-explorer.cutEntry",
        "title": "Cut",
        "icon": "$(cut)"
      },
      {
        "command": "secondary-explorer.copyEntry",
        "title": "Copy",
        "icon": "$(copy)"
      },
      {
        "command": "secondary-explorer.pasteEntry",
        "title": "Paste",
        "icon": "$(paste)"
      },
      {
        "command": "secondary-explorer.revealInFileExplorer",
        "title": "Reveal in File Explorer",
        "icon": "$(file-directory)"
      },
      {
        "command": "secondary-explorer.copyPath",
        "title": "Copy Path",
        "icon": "$(clippy)"
      },
      {
        "command": "secondary-explorer.copyRelativePath",
        "title": "Copy Relative Path",
        "icon": "$(clippy)"
      },
      {
        "command": "secondary-explorer.removePath",
        "title": "Remove From Explorer",
        "icon": "$(trash)"
      },
      {
        "command": "secondary-explorer.openInTerminal",
        "title": "Open in Integrated Terminal",
        "icon": "$(terminal)"
      },
      {
        "command": "secondary-explorer.addToSecondaryExplorer",
        "title": "Add to Secondary Explorer",
        "icon": "$(add)"
      },
      {
        "command": "secondary-explorer.viewAsList",
        "title": "View as List",
        "icon": "$(list-tree)"
      },
      {
        "command": "secondary-explorer.viewAsTree",
        "title": "View as Tree",
        "icon": "$(list-unordered)"
      },
      {
        "command": "secondary-explorer.copyToWorkspaceRoot",
        "title": "Copy to Workspace Root",
        "icon": "$(copy)"
      },
      {
        "command": "secondary-explorer.addSelectedToWorkspace",
        "title": "Add Folder to Workspace...",
        "icon": "$(add)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "secondary-explorer.refresh",
          "when": "false"
        },
        {
          "command": "secondary-explorer.addToSecondaryExplorer",
          "when": "false"
        },
        {
          "command": "secondary-explorer.pickPath",
          "when": "false"
        },
        {
          "command": "secondary-explorer.openSettings",
          "when": "false"
        },
        {
          "command": "secondary-explorer.createFile",
          "when": "false"
        },
        {
          "command": "secondary-explorer.createFolder",
          "when": "false"
        },
        {
          "command": "secondary-explorer.deleteEntry",
          "when": "false"
        },
        {
          "command": "secondary-explorer.renameEntry",
          "when": "false"
        },
        {
          "command": "secondary-explorer.openFile",
          "when": "false"
        },
        {
          "command": "secondary-explorer.openToTheSide",
          "when": "false"
        },
        {
          "command": "secondary-explorer.openFolderInNewWindow",
          "when": "false"
        },
        {
          "command": "secondary-explorer.cutEntry",
          "when": "false"
        },
        {
          "command": "secondary-explorer.copyEntry",
          "when": "false"
        },
        {
          "command": "secondary-explorer.pasteEntry",
          "when": "false"
        },
        {
          "command": "secondary-explorer.revealInFileExplorer",
          "when": "false"
        },
        {
          "command": "secondary-explorer.copyPath",
          "when": "false"
        },
        {
          "command": "secondary-explorer.copyRelativePath",
          "when": "false"
        },
        {
          "command": "secondary-explorer.removePath",
          "when": "false"
        },
        {
          "command": "secondary-explorer.viewAsList",
          "when": "false"
        },
        {
          "command": "secondary-explorer.viewAsTree",
          "when": "false"
        },
        {
          "command": "secondary-explorer.copyToWorkspaceRoot",
          "when": "false"
        },
        {
          "command": "secondary-explorer.addSelectedToWorkspace",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "secondary-explorer.addToSecondaryExplorer",
          "group": "navigation@99"
        }
      ],
      "editor/title/context": [
        {
          "command": "secondary-explorer.addToSecondaryExplorer",
          "group": "navigation@99"
        }
      ],
      "view/item/context": [
        {
          "command": "secondary-explorer.openFolderInNewWindow",
          "when": "view == secondaryExplorerView && viewItem == root",
          "group": "inline"
        },
        {
          "command": "secondary-explorer.removePath",
          "when": "view == secondaryExplorerView && viewItem == root",
          "group": "navigation@2"
        },
        {
          "command": "secondary-explorer.openFile",
          "when": "view == secondaryExplorerView && viewItem == file",
          "group": "navigation@3"
        },
        {
          "command": "secondary-explorer.openToTheSide",
          "when": "view == secondaryExplorerView && viewItem == file",
          "group": "navigation@4"
        },
        {
          "command": "secondary-explorer.revealInFileExplorer",
          "when": "view == secondaryExplorerView",
          "group": "navigation@5"
        },
        {
          "command": "secondary-explorer.openInTerminal",
          "when": "view == secondaryExplorerView",
          "group": "navigation@6"
        },
        {
          "command": "secondary-explorer.openFolderInNewWindow",
          "when": "view == secondaryExplorerView && (viewItem == file || viewItem == folder)",
          "group": "navigation@7"
        },
        {
          "command": "secondary-explorer.addSelectedToWorkspace",
          "when": "view == secondaryExplorerView",
          "group": "navigation@8"
        },
        {
          "command": "secondary-explorer.createFile",
          "when": "view == secondaryExplorerView",
          "group": "2_creation@1"
        },
        {
          "command": "secondary-explorer.createFolder",
          "when": "view == secondaryExplorerView",
          "group": "2_creation@2"
        },
        {
          "command": "secondary-explorer.cutEntry",
          "when": "view == secondaryExplorerView && (viewItem == file || viewItem == folder)",
          "group": "clipboard@1"
        },
        {
          "command": "secondary-explorer.copyEntry",
          "when": "view == secondaryExplorerView && (viewItem == file || viewItem == folder)",
          "group": "clipboard@2"
        },
        {
          "command": "secondary-explorer.pasteEntry",
          "when": "view == secondaryExplorerView",
          "group": "clipboard@3"
        },
        {
          "command": "secondary-explorer.copyPath",
          "when": "view == secondaryExplorerView",
          "group": "copy@1"
        },
        {
          "command": "secondary-explorer.copyRelativePath",
          "when": "view == secondaryExplorerView",
          "group": "copy@2"
        },
        {
          "command": "secondary-explorer.copyToWorkspaceRoot",
          "when": "view == secondaryExplorerView",
          "group": "copy@3"
        },
        {
          "command": "secondary-explorer.renameEntry",
          "when": "view == secondaryExplorerView && (viewItem == file || viewItem == folder)",
          "group": "editing@1"
        },
        {
          "command": "secondary-explorer.deleteEntry",
          "when": "view == secondaryExplorerView && (viewItem == file || viewItem == folder)",
          "group": "editing@2"
        }
      ],
      "view/title": [
        {
          "command": "secondary-explorer.pickPath",
          "when": "view == secondaryExplorerView",
          "group": "secondaryExplorer@1"
        },
        {
          "command": "secondary-explorer.viewAsList",
          "when": "view == secondaryExplorerView && !secondaryExplorerRootViewAsList",
          "group": "secondaryExplorer@2"
        },
        {
          "command": "secondary-explorer.viewAsTree",
          "when": "view == secondaryExplorerView && secondaryExplorerRootViewAsList",
          "group": "secondaryExplorer@3"
        },
        {
          "command": "secondary-explorer.openSettings",
          "when": "view == secondaryExplorerView",
          "group": "secondaryExplorer@4"
        },
        {
          "command": "secondary-explorer.createFile",
          "when": "view == secondaryExplorerView",
          "group": "navigation@1"
        },
        {
          "command": "secondary-explorer.createFolder",
          "when": "view == secondaryExplorerView",
          "group": "navigation@2"
        },
        {
          "command": "secondary-explorer.refresh",
          "when": "view == secondaryExplorerView",
          "group": "navigation@4"
        }
      ]
    },
    "keybindings": [
      {
        "command": "secondary-explorer.createFile",
        "key": "ctrl+n",
        "when": "focusedView == secondaryExplorerView && secondaryExplorerHasSelection"
      },
      {
        "command": "secondary-explorer.cutEntry",
        "key": "ctrl+x",
        "when": "focusedView == secondaryExplorerView && secondaryExplorerHasSelection"
      },
      {
        "command": "secondary-explorer.copyEntry",
        "key": "ctrl+c",
        "when": "focusedView == secondaryExplorerView && secondaryExplorerHasSelection"
      },
      {
        "command": "secondary-explorer.copyPath",
        "key": "ctrl+alt+c",
        "when": "focusedView == secondaryExplorerView && secondaryExplorerHasSelection"
      },
      {
        "command": "secondary-explorer.pasteEntry",
        "key": "ctrl+v",
        "when": "focusedView == secondaryExplorerView && secondaryExplorerHasSelection"
      },
      {
        "command": "secondary-explorer.renameEntry",
        "key": "f2",
        "when": "focusedView == secondaryExplorerView && secondaryExplorerHasSelection"
      },
      {
        "command": "secondary-explorer.deleteEntry",
        "key": "delete",
        "when": "focusedView == secondaryExplorerView && secondaryExplorerHasSelection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/micromatch": "^4.0.9",
    "@types/node": "22.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.1",
    "micromatch": "^4.0.8",
    "trash": "^10.1.0"
  }
}
